{
	"name": "icarusext",
	"displayName": "icarusext",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:icarusext.openProject",
		"onCommand:icarusext.newProject",
		"workspaceContains:**/*.core",
		"workspaceContains:project.yml"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "icarusext.openProject",
				"title": "Icarus: Open Project"
			},
			{
				"command": "icarusext.newProject",
				"title": "Icarus: New Project"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "project-view",
					"title": "Project View",
					"icon": "resources/flow.svg"
				}
			]
		},
		"views": {
			"project-view": [
				{
					"id": "projectView",
					"name": "Project View",
					"icon": "resources/flow.svg"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "projectView",
				"contents": "[New Project](command:icarusext.newProject)\n[Open Project](command:icarusext.openProject)",
				"when": "!icarusext.hasProjectLoading"
			},
			{
				"view": "projectView",
				"contents": "Loading project...",
				"when": "icarusext.hasProjectLoading && !icarusext.hasProjectOpen"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"pegjs": "pegjs -o ./out/fusesoc/CAPI2Meta.js ./src/fusesoc/CAPI2Meta.pegjs",
		"compile": "npm run pegjs && tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	},
	"dependencies": {
		"pegjs": "^0.10.0",
		"yaml": "^1.10.2"
	}
}
